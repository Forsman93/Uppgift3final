@model IEnumerable<WebApplication1.Models.EmploymentHistory>

@{
    ViewBag.Title = "Karriär";
    Layout = "~/Views/Shared/_LayoutFreeLance.cshtml";
}

<h2>Karriär</h2>

<p>
